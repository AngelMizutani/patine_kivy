<TelaExercicio@MDScreen>:
    FloatLayout:

        MDToolbar:
            md_bg_color: 1, 1, 1, 0
            especific_text_color: app.theme_cls.primary_color
            title: "Patine!"
            pos_hint: {'top': 1}
            elevation: 10
            right_action_items: [['plus', lambda x: root.irParaCadastro()]]

        MDLabel:
            text: 'Lista de Exercícios'
            font_style: 'H5'
            bold: True
            halign: 'center'
            pos_hint: {"center_x": 0.5,"center_y": 0.85}

        MDLabel:
            text: 'Freio em T'
            font_style: 'H6'
            bold: True
            pos_hint: {"center_x": 0.5,"center_y": 0.75}

        MDLabel:
            text: 'Faça um T com os patins para parar'
            pos_hint: {"center_x": 0.5,"center_y": 0.7}

        MDLabel:
            text: 'Posição de base'
            font_style: 'H6'
            bold: True
            pos_hint: {"center_x": 0.5,"center_y": 0.6}

        MDLabel:
            text: 'Mantenha a postura ereta, joelhos flexionados e pés em forma de V'
            pos_hint: {"center_x": 0.5,"center_y": 0.55}

        MDLabel:
            text: 'Limões'
            font_style: 'H6'
            bold: True
            pos_hint: {"center_x": 0.5,"center_y": 0.45}

        MDLabel:
            text: 'Desenhe círculos com os patins'
            pos_hint: {"center_x": 0.5,"center_y": 0.4}

    MDFlatButton:
        text: 'add'
        on_release: app.root.current = 'cadastro'
